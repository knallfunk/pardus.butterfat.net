<html>
    <head>
        <title></title>
        <link rel="stylesheet" href="style.css" type="text/css" />
        <script type="text/javascript" src="sorttable.js"></script>
    </head>
    <body>
        <p><a href="../pbs.html">Pardus Butterfat Stocker Home</a></p>
        <form method="get">
            Pick universe and sector:
            <br/>
            <!-- tmpl_loop name=universes -->
            <input type="radio" name="uni" value="<!-- tmpl_var name=name -->" id="uni<!-- tmpl_var name=name -->" <!-- tmpl_var name=checked --> /><label for="uni<!-- tmpl_var name=name -->"><!-- tmpl_var name=name --></label>
            <!-- /tmpl_loop name=universes -->
            <select name="sector">
                <!-- tmpl_loop name=sectors -->
                <option value="<!-- tmpl_var name=name -->" <!-- tmpl_var name=checked -->><!-- tmpl_var name=realname --></option>
                <!-- /tmpl_loop name=sectors -->
            </select>
            <input type="submit" value="search"/>
            <br/>
            <input type="checkbox" name="zero" id="zero" value="1"<!-- tmpl_if name=zero -->checked="checked"<!-- /tmpl_if -->
            /><label for="zero">Show zeros</label>
        </form>

        <!-- tmpl_if name=comos -->
        Click column headings to sort:
        <table border="1" cellpadding="1" cellspacing="0" id="bldgs" class="sortable">
            <tr>
                <th>x</th>
                <th>y</th>
                <th>name</th>
                <th>credits</th>
                <th>commodity</th>
                <th>free</th>
                <th>wanted</th>
                <th>available</th>
                <th>amount</th>
                <th>%</th>
                <th>min</th>
                <th>max</th>
                <th>sell</th>
                <th>buy</th>
                <th>last updated</th>
            </tr>
            <!-- tmpl_loop name=comos -->
            <tr>
                <td><!-- tmpl_var name=x --></td>
                <td><!-- tmpl_var name=y --></td>
                <td><!-- tmpl_var name=name --></td>
                <td><!-- tmpl_var name=creds --></td>
                <td><!-- tmpl_var name=ctype --></td>
                <td><!-- tmpl_var name=free --></td>
                <td class="<!-- tmpl_var name=class -->"><!-- tmpl_var name=wanted -->&nbsp;</td>
                <td class="<!-- tmpl_var name=class -->"><!-- tmpl_var name=available -->&nbsp;</td>
                <td><!-- tmpl_var name=amount --></td>
                <td><!-- tmpl_var name=percent -->%</td>
                <td><!-- tmpl_var name=min --></td>
                <td><!-- tmpl_var name=max --></td>
                <td><!-- tmpl_var name=sell --></td>
                <td><!-- tmpl_var name=buy --></td>
                <td><!-- tmpl_var name=updated_at --></td>
            </tr>
            <!-- /tmpl_loop name=comos -->
        </table>
        <!-- /tmpl_if name=comos -->

        <!-- tmpl_if name=needs -->
        Needs:
        <!-- tmpl_loop name=needs -->
        <!-- tmpl_var name=ctype -->: <!-- tmpl_var name=amt -->
        (<!-- tmpl_var name=available --> available)
        <br/>
        <!-- /tmpl_loop name=needs -->
        <!-- /tmpl_if name=needs -->

    </body>
</html>
